<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.JNRain.DefaultDark" parent="@style/Theme.Sherlock"></style>

    <style name="Theme.JNRain.DefaultDark.FragmentActivity" parent="@style/Theme.Sherlock"></style>

    <style name="Theme.JNRain.DefaultDark.NoActionBar" parent="@style/Theme.Sherlock.NoActionBar"></style>

    <style name="Theme.JNRain.DefaultLight" parent="@style/Theme.Sherlock.Light">
        <item name="android:windowBackground">@color/jnrain_green_light</item>

        <!-- for pressed style of action bar -->
        <item name="android:selectableItemBackground">@drawable/jnrain_sel_bkgnd</item>
        <item name="actionBarItemBackground">@drawable/jnrain_sel_bkgnd</item>
        <item name="android:actionBarItemBackground">@drawable/jnrain_sel_bkgnd</item>

        <!-- action bar -->
        <item name="actionBarStyle">@style/JNRainActionBar</item>
        <item name="android:actionBarStyle">@style/JNRainActionBar</item>

        <!-- VPI -->
        <item name="vpiTitlePageIndicatorStyle">@style/JNRainTitlePageIndicator</item>
    </style>

    <style name="Theme.JNRain.DefaultLight.NoActionBar" parent="@style/Theme.Sherlock.Light.NoActionBar">
        <item name="android:windowBackground">@color/jnrain_green_light</item>
    </style>

    <style name="Theme.JNRain.LoginScreen" parent="@style/Theme.JNRain.DefaultLight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/Animations.SplashScreen</item>
    </style>

</resources>